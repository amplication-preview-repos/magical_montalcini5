datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ChatRoom {
  createdAt     DateTime       @default(now())
  description   String?
  id            String         @id @default(cuid())
  messages      Message[]
  roomName      String?
  updatedAt     DateTime       @updatedAt
  userChatRooms UserChatRoom[]
}

model Message {
  chatRoom   ChatRoom? @relation(fields: [chatRoomId], references: [id])
  chatRoomId String?
  content    String?
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  timestamp  DateTime?
  updatedAt  DateTime  @updatedAt
  user       User?     @relation(fields: [userId], references: [id])
  userId     String?
}

model UserChatRoom {
  chatRoom   ChatRoom? @relation(fields: [chatRoomId], references: [id])
  chatRoomId String?
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  updatedAt  DateTime  @updatedAt
  user       User?     @relation(fields: [userId], references: [id])
  userId     String?
}

model User {
  createdAt     DateTime       @default(now())
  email         String?        @unique
  firstName     String?
  id            String         @id @default(cuid())
  lastName      String?
  messages      Message[]
  password      String
  roles         Json
  updatedAt     DateTime       @updatedAt
  userChatRooms UserChatRoom[]
  username      String         @unique
}
